<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="联系人列表"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_size_15_sp" />

        <TextView
            android:id="@+id/unread_count_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_red_circle_solid_r15"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unread_tag"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_red_circle_solid_r15"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15_sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:src="@mipmap/setting_arrow_icon" />
    </LinearLayout>

    <View
        android:id="@+id/long_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:visibility="gone" />

    <View
        android:id="@+id/short_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/line_gray"
        android:visibility="gone" />

</LinearLayout>