<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:background="#f7f7f7">

        <RelativeLayout
            android:id="@+id/phoneImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/myecard_click" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/phoneImageLayout"
            android:id="@+id/cardLableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cardLableEdit"
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:hint="在此输入名片名称"
                android:singleLine="true"
                android:maxLength="20"
                android:textColorHint="#e9e9e9" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="姓名"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nameText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nameEdit"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="在此输入姓名"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColorHint="#e9e9e9" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/companyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="公司"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_toRightOf="@+id/companyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/companyEdit"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="在此输入公司名称"
                    android:maxLength="20"
                    android:textColorHint="#e9e9e9" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/position_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/positionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="职位"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_toRightOf="@+id/positionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/positionEdit"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="在此输入职位名称"
                    android:maxLength="20"
                    android:textColorHint="#e9e9e9" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>